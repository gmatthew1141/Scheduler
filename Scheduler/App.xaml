<Application x:Class="Scheduler.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Scheduler"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <DataTemplate x:Key="EmployeeListTemplate">
            <TextBlock x:Name="ListBoxText"
                       Text="{Binding Name}"
                       VerticalAlignment="Center"
                       Margin="10, 10, 10, 10" />
        </DataTemplate>

        <DataTemplate x:Key="PositionListTemplate">
            <TextBlock x:Name="ListBoxText"
                       Text="{Binding position}"
                       VerticalAlignment="Center"
                       Margin="10, 10, 10, 10" />

        </DataTemplate>

        <DataTemplate x:Key="SectionListTemplate">
            <TextBlock x:Name="ListBoxText"
                       Text="{Binding section}"
                       VerticalAlignment="Center"
                       Margin="10, 10, 10, 10" />

        </DataTemplate>
        
        
    </Application.Resources>
</Application>
